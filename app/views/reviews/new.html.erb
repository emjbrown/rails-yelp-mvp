<div class="container">
  <h1>Leave a review:</h1>

  <%= simple_form_for([@restaurant, @review]) do |f| %>
    <div class="form-inputs">
      <%= f.input :rating %>
      <%= f.input :content %>
    </div>

    <div class="form-actions btn btn-outline-primary">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
