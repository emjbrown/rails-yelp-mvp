<div class="container">
  <h1>All Restaurants</h1>
  <p><%= link_to 'Add a restaurant', new_restaurant_path %></p>
    <% @restaurants.each do |restaurant| %>
     <div class="card">
      <p>
        <strong>Name:</strong>
        <%= link_to restaurant.name, restaurant %>
      </p>

      <p>
        <strong>Address:</strong>
        <%= restaurant.address %>
      </p>

      <p>
        <strong>Category:</strong>
        <%= restaurant.category %>
      </p>
      </div>
    <% end %>
</div>
